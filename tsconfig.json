{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",
    "module": "commonjs",

    /* Paths */
    "rootDir": ".",        // ðŸ‘ˆ All your TS source files live here
    "outDir": "dist",        // ðŸ‘ˆ Compiled JS will be emitted here
    "typeRoots": ["./node_modules/@types", "./types"],

    /* Interop & Checks */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],           // include all TS files in root & subfolders
  "exclude": ["node_modules", "dist"]
}
